<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.irishsnugs.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pint"
        android:id="@+id/pint_image_button"
        android:background="@color/white"
        android:paddingTop="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nesbitts"
        android:id="@+id/snug_image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/snug_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:fontFamily="sans-serif"
        android:text="Doheny &amp; Nesbitt"
        android:textSize="20sp"
        android:id="@+id/name_text_view" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/snug_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif"
        android:text="5 Baggot Street Lower, Dublin 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="This classic pub houses two fine old snugs."
        android:textSize="16sp" />


</RelativeLayout>
